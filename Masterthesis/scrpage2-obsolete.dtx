% \item[\meta{GS}]  Definition fr die \emph{gerade} Seite
% \item[\meta{US}]  Definition fr die \emph{ungerade} Seite
% \item[\meta{ES}]  Definition fr \emph{einseitiges} Layout
% \item[\meta{ULL}] untere Linienlnge Kopf = Trennlinie, Fu = auen
% \item[\meta{ULD}] untere Liniendicke
