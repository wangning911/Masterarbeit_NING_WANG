%     \put(91,13){\framebox(8,4){~}}
%^^A                                 % commands and arrow
%^^A                                 % for twoside
%^^A                                 % 
%     \put(50,65){\makebox(0,0){\cs{ihead}}}
%     \put(44,65){\vector(-1,0){4}}\put(56,65){\vector(1,0){4}}
%     \put(50,58){\makebox(0,0){\cs{chead}}}
%     \put(44,58){\line(-1,0){24}}\put(56,58){\line(1,0){24}}
